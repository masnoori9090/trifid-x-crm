generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  password      String
  role          String    @default("SALES_REP") // ADMIN, MANAGER, SALES_REP
  avatar        String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  contacts      Contact[]
  deals         Deal[]
  activities    Activity[]
  tasks         Task[]
  assignedTasks Task[]     @relation("AssignedTasks")
}

model Contact {
  id            String     @id @default(cuid())
  firstName     String
  lastName      String
  email         String?
  phone         String?
  company       String?
  position      String?
  status        String     @default("LEAD") // LEAD, PROSPECT, CUSTOMER, LOST
  source        String?    // Website, Referral, Cold Call, etc.
  customFields  String?    // JSON string for custom fields
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  
  ownerId       String
  owner         User       @relation(fields: [ownerId], references: [id])
  
  deals         Deal[]
  activities    Activity[]
  tasks         Task[]
}

model Deal {
  id            String     @id @default(cuid())
  title         String
  value         Float
  probability   Int        @default(50) // 0-100
  expectedCloseDate DateTime?
  actualCloseDate   DateTime?
  status        String     @default("OPEN") // OPEN, WON, LOST
  stage         String     @default("QUALIFICATION") // Pipeline stage
  notes         String?
  customFields  String?    // JSON string
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  
  ownerId       String
  owner         User       @relation(fields: [ownerId], references: [id])
  
  contactId     String
  contact       Contact    @relation(fields: [contactId], references: [id])
  
  pipelineId    String
  pipeline      Pipeline   @relation(fields: [pipelineId], references: [id])
  
  activities    Activity[]
  tasks         Task[]
}

model Pipeline {
  id            String     @id @default(cuid())
  name          String
  stages        String     // JSON array of stage names
  isDefault     Boolean    @default(false)
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  
  deals         Deal[]
}

model Activity {
  id            String     @id @default(cuid())
  type          String     // EMAIL, CALL, SMS, NOTE, MEETING
  subject       String?
  content       String?
  outcome       String?    // For calls: Connected, Voicemail, No Answer
  duration      Int?       // In minutes
  scheduledAt   DateTime?
  completedAt   DateTime?
  createdAt     DateTime   @default(now())
  
  userId        String
  user          User       @relation(fields: [userId], references: [id])
  
  contactId     String?
  contact       Contact?   @relation(fields: [contactId], references: [id])
  
  dealId        String?
  deal          Deal?      @relation(fields: [dealId], references: [id])
}

model Task {
  id            String     @id @default(cuid())
  title         String
  description   String?
  dueDate       DateTime?
  priority      String     @default("MEDIUM") // LOW, MEDIUM, HIGH
  status        String     @default("TODO") // TODO, IN_PROGRESS, DONE
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  
  createdById   String
  createdBy     User       @relation(fields: [createdById], references: [id])
  
  assignedToId  String?
  assignedTo    User?      @relation("AssignedTasks", fields: [assignedToId], references: [id])
  
  contactId     String?
  contact       Contact?   @relation(fields: [contactId], references: [id])
  
  dealId        String?
  deal          Deal?      @relation(fields: [dealId], references: [id])
}

model EmailTemplate {
  id            String     @id @default(cuid())
  name          String
  subject       String
  body          String
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
}
